<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boss.rains.ChooseUserHeadPicActivity">

    <ImageView
        android:id="@+id/img_ch_01"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/head"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/img_ch_02"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/img_ch_01"
        android:layout_alignStart="@+id/img_ch_01"
        android:layout_below="@+id/img_ch_01"
        android:layout_marginTop="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_ch_01"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="50dp" />
</RelativeLayout>
